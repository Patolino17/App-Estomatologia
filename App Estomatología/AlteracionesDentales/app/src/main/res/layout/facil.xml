<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    tools:context="com.example.asus.alteracionesdentales.Facil">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="false"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:id="@+id/tableLayout">

        <TableRow
            android:layout_width="320dp"
            android:layout_height="fill_parent">

            <ImageButton
                android:id="@+id/carta1"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_column="0"
                android:src="@drawable/carta0" />

            <ImageButton
                android:id="@+id/carta2"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_column="2"
                android:src="@drawable/carta0" />

            <ImageButton
                android:id="@+id/carta3"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_column="3"
                android:src="@drawable/carta0" />

            <ImageButton
                android:id="@+id/carta4"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_column="4"
                android:src="@drawable/carta0" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="320dp"
            android:layout_height="fill_parent">

            <ImageButton
                android:id="@+id/carta5"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_column="0"
                android:src="@drawable/carta0" />

            <ImageButton
                android:id="@+id/carta6"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_column="2"
                android:src="@drawable/carta0" />

            <ImageButton
                android:id="@+id/carta7"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_column="3"
                android:src="@drawable/carta0" />

            <ImageButton
                android:id="@+id/carta8"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_column="4"
                android:src="@drawable/carta0" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"></TableRow>

        <TableRow
            android:layout_width="320dp"
            android:layout_height="fill_parent">

            <ImageButton
                android:id="@+id/carta9"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_column="0"
                android:src="@drawable/carta0" />

            <ImageButton
                android:id="@+id/carta10"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_column="2"
                android:src="@drawable/carta0" />

            <ImageButton
                android:id="@+id/carta11"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_column="3"
                android:src="@drawable/carta0" />

            <ImageButton
                android:id="@+id/carta12"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:layout_column="4"
                android:src="@drawable/carta0" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnReiniciar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reiniciar"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/tableLayout"
        android:background="#16a085"
        android:textColor="#fff" />

    <Button
        android:id="@+id/btnSalir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Salir"
        android:layout_alignTop="@+id/btnReiniciar"
        android:layout_toRightOf="@+id/btnReiniciar"
        android:background="#16a085"
        android:textColor="#fff" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Puntaje: "
        android:textSize="30dp"
        android:layout_below="@+id/btnReiniciar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtPuntaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:layout_alignTop="@+id/editText"
        android:layout_toRightOf="@+id/btnSalir" />

    <TextView
        android:id="@+id/editText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fallas: "
        android:textSize="30dp"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtFallas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:layout_below="@+id/txtPuntaje"
        android:layout_alignLeft="@+id/txtPuntaje"
        android:layout_alignStart="@+id/txtPuntaje" />

</RelativeLayout>
