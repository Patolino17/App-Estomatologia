<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:screenOrientation="landscape"
    tools:context="com.example.asus.alteracionesdentales.displasia2"
    android:background="@drawable/fondo">

    <ScrollView
        android:layout_width="700dp"
        android:layout_height="150dp"
        android:id="@+id/scrollView30"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView32"
            android:background="@drawable/displasiadentanaria2" />
    </ScrollView>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="←"
        android:id="@+id/button89"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#16a085"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="→"
        android:id="@+id/button90"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/scrollView30"
        android:layout_alignEnd="@+id/scrollView30"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="#ffffff"
        android:background="#16a085" />

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:text="Menu"
        android:id="@+id/button91"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#16a085"
        android:textColor="#ffffff" />
</RelativeLayout>
